<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="20dp">

    <TextView
        android:id="@+id/nombreDepartamento"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departamento"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/ultimosCasos"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ultimos Casos"
        android:layout_toRightOf="@id/nombreDepartamento"
        android:layout_marginLeft="32dp"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/cantidadPorDepartamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreDepartamento"
        android:textSize="14dp"
        android:layout_marginTop="8dp"
        android:text="10000" />

    <TextView
        android:id="@+id/ultimosCasosDepartamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:layout_toRightOf="@id/nombreDepartamento"
        android:layout_below="@id/ultimosCasos"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp" />


</RelativeLayout>